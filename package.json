{
  "name": "app-name",
  "version": "0.0.1",
  "description": "App description",
  "private": true,
  "author": "Sarah Gazelle",
  "license": "MIT",
  "engines": {
    "node": "10.15.0"
  },
  "config": {
    "entrypoint": "build/server.js"
  },
  "scripts": {
    "build": "tsc",
    "clean-build": "rm -rf build && npm run build",
    "start": "NODE_ENV=\"production\" node $npm_package_config_entrypoint",
    "dev": "NODE_ENV=\"development\" node $npm_package_config_entrypoint",
    "debug": "NODE_ENV=\"debug\" node $npm_package_config_entrypoint",
    "test": "NODE_ENV=\"test\" jest",
    "watch-ts": "tsc -w",
    "watch-js-dev": "NODE_ENV=\"development\" nodemon $npm_package_config_entrypoint",
    "watch-js-debug": "NODE_ENV=\"debug\" nodemon $npm_package_config_entrypoint",
    "watch-dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,magenta.bold\" \"npm run watch-ts\" \"npm run watch-js-dev\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,magenta.bold\" \"npm run watch-ts\" \"npm run watch-js-debug\""
  },
  "nodemonConfig": {
    "env": {
      "NODE_HEAPDUMP_OPTIONS": "nosignal"
    }
  },
  "jest": {
    "roots": [
      "build"
    ]
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-fileupload": "^1.1.1-alpha.3",
    "express-http-context": "^1.2.0",
    "express-validator": "^5.3.1",
    "fs": "0.0.1-security",
    "path": "^0.12.7",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/body-parser": "^1.17.0",
    "@types/cls-hooked": "^4.2.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/express-fileupload": "^0.4.0",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.9.5",
    "@types/rewire": "^2.5.28",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "jest": "^24.1.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.16.4",
    "rewire": "^4.0.1",
    "typescript": "^3.3.3333"
  }
}
